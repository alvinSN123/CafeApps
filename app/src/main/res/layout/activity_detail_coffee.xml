<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailCoffee">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_detail_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:text="Silahkan Pilih Coffee"
                android:textColor="@color/emas1"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="@font/indie_flower" />


        </LinearLayout>
        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:id="@+id/korner_detail_coffe"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_layout_corner"
            app:corner_radius="15dp">

        <ImageView
            android:id="@+id/img_detail_coffee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>


        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    </LinearLayout>





</androidx.core.widget.NestedScrollView>